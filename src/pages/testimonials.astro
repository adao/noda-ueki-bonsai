---
import Layout from '../layouts/Layout.astro';
import testimonials from '../../content/testimonials.json';
---

<Layout 
  title="Testimonials" 
  description="Read what our clients say about their experience with Noda Ueki and Bonsai's Japanese landscaping and Bonsai services."
>
  <!-- Testimonials -->
  <section class="section">
    <div class="container">
      <h1>Client Testimonials</h1>
      
      <div class="testimonials-list">
        {testimonials.map((testimonial) => (
          <blockquote class="testimonial">
            <p class="quote-text">"{testimonial.text}"</p>
            <cite class="quote-author">
              <strong>{testimonial.name}</strong>
              <span class="location">{testimonial.location.replace('Portland, OR', 'South Bay, LA').replace('Seattle, WA', 'South Bay, LA').replace('Eugene, OR', 'South Bay, LA').replace('Vancouver, WA', 'South Bay, LA').replace('Beaverton, OR', 'South Bay, LA')}</span>
            </cite>
          </blockquote>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .testimonials-list {
    display: grid;
    gap: var(--spacing-xl);
    margin-top: var(--spacing-xl);
    max-width: 900px;
  }
  
  .testimonial {
    padding: var(--spacing-lg);
    background-color: var(--color-white);
    border-radius: var(--border-radius);
    border-left: 3px solid var(--color-accent);
  }
  
  .quote-text {
    font-size: var(--font-size-quote);
    font-style: italic;
    line-height: 1.6;
    margin-bottom: var(--spacing-md);
  }
  
  .quote-author {
    display: flex;
    flex-direction: column;
    font-style: normal;
    font-size: var(--font-size-small);
  }
  
  .quote-author strong {
    color: var(--color-primary);
  }
  
  .location {
    color: var(--color-text-light);
  }
</style>
