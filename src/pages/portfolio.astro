---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import zenCourtyard from '../images/portfolio/zen-courtyard-before.jpg';
import residentialGarden from '../images/portfolio/residential-garden.jpg';
import teaGarden from '../images/portfolio/tea-garden-before.jpg';
import bonsaiTree from '../images/blog/bonsai-tree.jpg';
import pruningTree from '../images/blog/pruning-tree.jpg';
---

<Layout 
  title="Portfolio" 
  description="Explore our completed Japanese landscaping, Ueki, and Bonsai projects in South Bay LA."
>
  <!-- Portfolio -->
  <section class="section">
    <div class="container">
      <h1>Portfolio</h1>
      
      <div class="portfolio-list">
        <!-- Project 1 -->
        <article class="project">
          <a href="/portfolio/zen-courtyard-transformation" class="project-image">
            <Image src={zenCourtyard} alt="Zen courtyard with shaped pines and raked gravel" />
          </a>
          <div class="project-info">
            <p class="client-name">Sarah M.</p>
            <p class="location">South Bay, LA</p>
            <p class="description">A neglected urban courtyard becomes a serene meditation space featuring traditional Niwaki-pruned pines, raked gravel garden, and natural stone elements.</p>
            <a href="/portfolio/zen-courtyard-transformation" class="text-link">See more →</a>
          </div>
        </article>
        
        <!-- Project 2 -->
        <article class="project">
          <a href="/portfolio/residential-front-garden-redesign" class="project-image">
            <Image src={residentialGarden} alt="Residential front garden with Japanese maple" />
          </a>
          <div class="project-info">
            <p class="client-name">Michael K.</p>
            <p class="location">South Bay, LA</p>
            <p class="description">Contemporary architecture meets Japanese aesthetics in this welcoming entrance featuring a stunning specimen Japanese maple and layered plantings.</p>
            <a href="/portfolio/residential-front-garden-redesign" class="text-link">See more →</a>
          </div>
        </article>
        
        <!-- Project 3 -->
        <article class="project">
          <a href="/portfolio/tea-garden-installation" class="project-image">
            <Image src={teaGarden} alt="Traditional tea garden with stone path" />
          </a>
          <div class="project-info">
            <p class="client-name">Jennifer L.</p>
            <p class="location">South Bay, LA</p>
            <p class="description">An authentic roji (tea garden path) created for a tea ceremony practitioner, complete with traditional elements and symbolic plantings following classical design principles.</p>
            <a href="/portfolio/tea-garden-installation" class="text-link">See more →</a>
          </div>
        </article>
        
        <!-- Project 4 -->
        <article class="project">
          <a href="/portfolio/mature-japanese-maple-restoration" class="project-image">
            <Image src={bonsaiTree} alt="Japanese maple in autumn colors" />
          </a>
          <div class="project-info">
            <p class="client-name">David R.</p>
            <p class="location">South Bay, LA</p>
            <p class="description">Revival and shaping of a 30-year-old Japanese maple that had been neglected, revealing its natural grace through careful Niwaki pruning techniques.</p>
            <a href="/portfolio/mature-japanese-maple-restoration" class="text-link">See more →</a>
          </div>
        </article>
        
        <!-- Project 5 -->
        <article class="project">
          <a href="/portfolio/contemporary-pine-garden" class="project-image">
            <Image src={pruningTree} alt="Shaped pine trees in Japanese garden" />
          </a>
          <div class="project-info">
            <p class="client-name">Lisa T.</p>
            <p class="location">South Bay, LA</p>
            <p class="description">Modern minimalist design featuring cloud-pruned Japanese black pines as living sculptures against a backdrop of gravel and weathered stone.</p>
            <a href="/portfolio/contemporary-pine-garden" class="text-link">See more →</a>
          </div>
        </article>
      </div>
    </div>
  </section>
</Layout>

<style>
  .portfolio-list {
    display: grid;
    gap: var(--spacing-xxl);
    margin-top: var(--spacing-xl);
  }
  
  .project {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: var(--spacing-xl);
    align-items: start;
  }
  
  .project-image {
    display: block;
    transition: opacity var(--transition-speed);
  }
  
  .project-image:hover {
    opacity: 0.9;
  }
  
  .project img {
    border-radius: var(--border-radius);
    width: 100%;
  }
  
  .client-name {
    font-weight: 500;
    color: var(--color-primary);
    margin-bottom: var(--spacing-xs);
  }
  
  .location {
    color: var(--color-text-light);
    font-size: var(--font-size-small);
    margin-bottom: var(--spacing-md);
  }
  
  .description {
    margin: 0 0 var(--spacing-sm) 0;
  }
  
  @media (max-width: 768px) {
    .project {
      grid-template-columns: 1fr;
    }
  }
</style>
