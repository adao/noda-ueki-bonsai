---
import Layout from '../layouts/Layout.astro';
---

<Layout 
  title="Contact" 
  description="Get in touch with Noda Ueki and Bonsai to discuss your Japanese garden, Ueki, or Bonsai project."
>
  <!-- Contact Section -->
  <section class="section">
    <div class="container">
      <h1>Contact Us</h1>
      
      <div class="contact-grid">
        <!-- Contact Form -->
        <div class="contact-form-container">
          <p>Fill out the form below and we'll get back to you within 1-2 business days.</p>
          
          <form 
            name="contact" 
            method="POST" 
            data-netlify="true" 
            netlify-honeypot="bot-field"
            class="contact-form"
          >
            <!-- Netlify form detection -->
            <input type="hidden" name="form-name" value="contact" />
            
            <!-- Honeypot field for spam prevention -->
            <p class="visually-hidden">
              <label>Don't fill this out if you're human: <input name="bot-field" /></label>
            </p>
            
            <div class="form-group">
              <label for="name">Name *</label>
              <input type="text" id="name" name="name" required />
            </div>
            
            <div class="form-group">
              <label for="email">Email *</label>
              <input type="email" id="email" name="email" required />
            </div>
            
            <div class="form-group">
              <label for="phone">Phone</label>
              <input type="tel" id="phone" name="phone" />
            </div>
            
            <div class="form-group">
              <label for="service">Service Interest</label>
              <select id="service" name="service">
                <option value="">Select a service...</option>
                <option value="ueki">Ueki (Japanese Garden Trees)</option>
                <option value="bonsai">Bonsai Services</option>
                <option value="design">Garden Design</option>
                <option value="maintenance">Maintenance</option>
                <option value="consultation">Consultation</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="message">Message *</label>
              <textarea id="message" name="message" required placeholder="Tell us about your project..."></textarea>
            </div>
            
            <button type="submit" class="btn btn-primary">Send Message</button>
          </form>
        </div>
        
        <!-- Contact Info -->
        <div class="contact-info">
          <div class="info-block">
            <h3>Get In Touch</h3>
            
            <div class="info-item">
              <strong>Email</strong>
              <a href="mailto:info@nodaueki.com">info@nodaueki.com</a>
            </div>
            
            <div class="info-item">
              <strong>Phone</strong>
              <a href="tel:+15551234567">(555) 123-4567</a>
            </div>
            
            <div class="info-item">
              <strong>Service Area</strong>
              <p>We service the South Bay LA area.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .contact-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: var(--spacing-xl);
    margin-top: var(--spacing-lg);
  }
  
  .contact-form-container > p {
    margin-bottom: var(--spacing-lg);
    color: var(--color-text-light);
  }
  
  .contact-form {
    background-color: var(--color-white);
    padding: var(--spacing-lg);
    border-radius: var(--border-radius);
  }
  
  .form-group {
    margin-bottom: var(--spacing-md);
  }
  
  .info-block {
    background-color: var(--color-white);
    padding: var(--spacing-lg);
    border-radius: var(--border-radius);
    position: sticky;
    top: 100px;
  }
  
  .info-item {
    margin-bottom: var(--spacing-md);
  }
  
  .info-item:last-child {
    margin-bottom: 0;
  }
  
  .info-item strong {
    display: block;
    margin-bottom: var(--spacing-xs);
    color: var(--color-primary);
    font-size: var(--font-size-small);
  }
  
  .info-item a {
    color: var(--color-text);
  }
  
  .info-item p {
    margin: 0;
  }
  
  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }
    
    .info-block {
      position: static;
    }
    
    .contact-form {
      padding: var(--spacing-md);
    }
  }
</style>
